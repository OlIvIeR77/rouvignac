<script type="text/javascript">

	$(document).ready(function(){

		$(".ec-event").hide();

	});

</script>


<script type="text/javascript">

	$(document).ready( function () {

		function occupe(e) {
			e.preventDefault();
			$("*[data-color='red']").fadeToggle();
		}
		function disponible(e) {
			e.preventDefault();
			$("*[data-color='green']").fadeToggle();
		}

		$("a#busy").bind('click', occupe);
		$('a#free').bind('click', disponible);

	});
	
</script>
