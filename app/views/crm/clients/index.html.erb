<%= link_to "Create New Client", new_crm_client_path, class: "btn btn-info", style: "float:right;" %>
<%= link_to "Reset Search", crm_clients_path(reset: true), class: "btn btn-danger", style: "float:left;" %>

<h1 style="text-align:center;">Clients List</h1>

<%= form_tag crm_clients_path, method: 'get' do %>
  <%= text_field_tag :search_by_last_name, nil, placeholder: 'search by last_name', class: 'twb_form_control' %>
  <%= submit_tag "search", class: 'btn btn-warning btn-large btn-block' %>
<% end %>

<table class="table table-striped">

  <thead>
    <tr>
      <th>ID</th>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Mobile Phone number</th>
      <th>Street Number</th>
      <th>Street Name</th>
      <th>Potal Code</th>
      <th>City</th>
      <th>Number of person</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.last_name %></td>
        <td><%= client.first_name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone_number %></td>
        <td><%= client.mobile_phone_number %></td>
        <td><%= client.street_number %></td>
        <td><%= client.street_name %></td>
        <td><%= client.postal_code %></td>
        <td><%= client.city %></td>
        <td><%= client.number_of_person %></td>
        <td><%= link_to "Show", crm_client_path(client), class: 'btn btn-success' %></td>
        <td><%= link_to "Edit", edit_crm_client_path(client), class: 'btn btn-info' %></td>
        <td><%= link_to "Destroy", crm_client_path(client), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
