<%= form_for @gite do |f| %>
  <% if @gite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gite.errors.count, "error") %> prohibited this gite from being saved:</h2>

      <ul>
      <% @gite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %> Nom du Gîte (sans accents)<br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text1 %> Type de Gîte (studio-sort ; studio-mezzanine-sort ; f2-sort : f3-sort ; f4-sort ; f5-sort)<br />
    <%= f.select :text1, options_for_select([ ["studio", "studio-sort"], ["studio-mezzanine", "studio-mezzanine-sort"], ["F2", "f2-sort"], ["F3", "f3-sort"], ["F4", "f4-sort"], ["F5", "f5-sort"] ], @gite.text1) %>
  </div>
  <div class="field">
    <%= f.label :text2 %>Nombre de personnes (1-2 Personnes ; 2-3 Personnes etc ..)<br />
    <%= f.text_field :text2 %>
  </div>
  <div class="field">
    <%= f.label :text3 %>Description du Gîte<br />
    <%= f.text_area :text3 %>
  </div>
  <div class="field">
    <%= f.label :text10 %>Photo Principal (doit avoir une taille de 520x400px)<br />
    <%= f.file_field :text10 %>
  </div>
  <div class="field">
    <%= f.label :text9 %>Photo 2<br />
    <%= f.file_field :text9 %>
  </div>
  <div class="field">
    <%= f.label :text8 %>Photo 3<br />
    <%= f.file_field :text8 %>
  </div>
  <div class="field">
    <%= f.label :text7 %><br />
    <%= f.file_field :text7 %>
  </div>
  <div class="field">
    <%= f.label :text6 %><br />
    <%= f.file_field :text6 %>
  </div>
  <div class="field">
    <%= f.label :text5 %><br />
    <%= f.file_field :text5 %>
  </div>
  <div class="field">
    <%= f.label :text4 %><br />
    <%= f.file_field :text4 %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit :style => "background:green;" %>
  </div>
<% end %>
