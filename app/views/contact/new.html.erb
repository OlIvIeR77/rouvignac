<br/>
    
        <!-- **Container** -->
    <div class="container">
        
        <!-- **Primary Section** -->
      <section id="primary" class="content-full-width">   
        
          <div class="column two-third">

            
              <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true" %>
              <%= javascript_include_tag "gmaps" %>

              <div id="map">

              </div>

              <script type="text/javascript">
                var map = new GMaps({
                    div: '#map',
                    lat: 43.787206,
                    lng: 3.102897,
                    zoom: 10
                });
                map.addMarker({
                  lat: 43.787206,
                    lng: 3.102897,
                    infoWindow: {
                      content: "<div><span style='font-weight: bold;'>Gîtes de Rouvignac, Avène, France</span><br/>04 67 23 20 12<br/>rouvignac@gmail.com<br/><a href='https://plus.google.com/106964346367233775864/about' style='color: blue;'>Plus d'infos »</a></div>"
                    }
                });
                

              </script>

                <div>
                    <p style="text-align: center; color: #7aa127;"><%= t 'contact.textesouscarte' %></p>
                </div>

          </div>  
            
            <div class="column one-third last">
                <div class="contact-details">
                  <h2> <%= t 'contact.title' %> </h2>
                  <p><strong> Hameau de Rouvignac 34260 Avène </strong></p>
                    <p> <span class="icon-phone"> </span> <strong><%= t 'contact.telephone' %></strong> : 04 67 23 20 12 </p>
                    <p> <span class="icon-mobile-phone"> </span> <strong><%= t 'contact.portable' %></strong> : 06 82 02 99 24 </p>
                    <p> <span class="icon-envelope-alt"> </span> <strong>Email</strong> : <a href="mailto:rouvignac@gmail.com"> rouvignac@gmail.com </a> </p>
                    <p> <span class="icon-globe"> </span> <strong>Website</strong> : <a href="" title=""> www.rouvignac.fr </a> </p> 
                    <h4> <%= t 'contact.acces.title' %> </h4>
                    <p class="working-hours"> <span class="icon-road"> </span> <strong><%= t 'contact.modedetransport' %></strong> <br> 
                    <p><%= t 'contact.acces.text' %></p> </p>
                </div>
            </div>
            
            <div class="clear"> </div>
            <hr/>            
            <h3> <%= t 'contact.message' %> </h3>
            <div class="message"></div>
            <div id="contact-form">
              <%= form_for @message, :url => contact_path do |form| %>
                <p class="column one-half">
                    <%= form.text_field :name, :placeholder => " #{ t 'contact.nom' } " %>
                </p>
                
                <p class="column one-half last">
                    <%= form.text_field :email, :placeholder => " #{ t 'contact.mail' } " %>
                </p>
                
                <p class="clear">
                  <%= form.text_area :body, :placeholder => " #{ t 'contact.message' } " %>
                </p>
                
                <p>
                  <%= form.submit "#{ t 'contact.bouttonenvoyer' }", :class => "btn btn-large btn-success", :style => "background-color: #7aa127;" %>
                </p>           
              <% end %> 
            </div>

        
          
        </section><!-- **Primary Section** -->

    </div>


