        <!-- **Container** -->
        <div class="container">
        
        <!-- **Primary Section** -->
        <section id="primary" class="content-full-width">   
        
          <div class="column two-third">
              <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true" %>
              <%= javascript_include_tag "gmaps" %>

              <div id="map">

              </div>

              <script type="text/javascript">
                var map = new GMaps({
                    div: '#map',
                    lat: 43.787206,
                    lng: 3.102897,
                    zoom: 12
                });
                map.addMarker({
                  lat: 43.787206,
                    lng: 3.102897,
                    infoWindow: {
                      content: "<div><span style='font-weight: bold;'>Gîtes de Rouvignac, Avène, France</span><br/>04 67 23 20 12<br/>rouvignac@gmail.com<br/><a href='https://plus.google.com/106964346367233775864/about' style='color: blue;'>Plus d'infos »</a></div>"
                    }
                });
                

              </script>

                <div>
                    <p style="text-align: center; color: #7aa127;">En venant d'Avène, longer le barrage et 2 km après le col, 1ère route goudronnée à droite.</p>
                </div>

          </div>  
            
            <div class="column one-third last">
                <div class="contact-details">
                  <h2> Informations </h2>
                  <p><strong> Hâmeau de Rouvignac 34260 Avène </strong></p>
                    <p> <span class="icon-phone"> </span> <strong>Téléphone</strong> : 04 67 23 20 12 </p>
                    <p> <span class="icon-envelope-alt"> </span> <strong>Email</strong> : <a href="mailto:rouvignac@gmail.com"> rouvignac@gmail.com </a> </p>
                    <p> <span class="icon-globe"> </span> <strong>Website</strong> : <a href="" title=""> www.rouvignac.fr </a> </p> 
                    <h4> Accès </h4>
                    <p class="working-hours"> <span class="icon-plane"> </span> <strong>En voiture</strong> <br> 
                    <p>En venant de lodève passer par Lunas et le bousquet d'orb pour rejoindre Avène</p> </p>
                </div>
            </div>
            
            <div class="clear"> </div>
            <hr/>            
            <h3> Ecrivez nous </h3>
            <div class="message"></div>
            <div id="contact-form">
              <%= form_for @message, :url => contact_path do |form| %>
                <p class="column one-half">
                    <%= form.text_field :name, :placeholder => "Votre Nom" %>
                </p>
                
                <p class="column one-half last">
                    <%= form.text_field :email, :placeholder => "Votre Email" %>
                </p>
                
                <p class="clear">
                  <%= form.text_area :body, :placeholder => "Votre Message" %>
                </p>
                
                <p>
                  <%= form.submit "Envoyer" %>
                </p>           
              <% end %> 
            </div>

        
          
        </section><!-- **Primary Section** -->




